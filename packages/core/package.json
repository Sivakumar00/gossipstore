{
  "name": "@gossipstore/core",
  "version": "0.1.0",
  "description": "Core data structures and conflict logic for GossipStore",
  "author": "Sivakumar",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sivakumar00/gossipstore.git"
  },
  "keywords": [
    "gossip",
    "vector-clock",
    "distributed",
    "key-value",
    "lru-cache"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.json",
    "build:prod": "tsc --project tsconfig.json --declaration --declarationMap --sourceMap --inlineSources false",
    "test": "jest --coverage --coverageDirectory=coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src",
    "format": "prettier --write \"./**/*.{ts,js,json,md}\"",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@jest/globals": "^30.2.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "eslint": "^9.39.1",
    "jest": "^29.7.0",
    "prettier": "^3.7.4",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.4.6",
    "tslib": "^2.6.2",
    "typescript": "^5.0.0"
  }
}
